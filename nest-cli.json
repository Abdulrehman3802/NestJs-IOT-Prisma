{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions":{
    "builder": "swc",
    "typeCheck": true,
    "options": {
      "swcrcPath": "infrastructure/.swcrc"
    },
    "deleteOutDir": true,
    "assets": [
      "mail"
    ]
  }
}
